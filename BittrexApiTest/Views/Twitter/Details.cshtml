@using TweetSharp;

@model IEnumerable<TwitterStatus>

<section>
    <hr />
    <h1>@Model.First().User.Name</h1>
    <hr />

    <section>
        <table cellpadding="0" cellspacing="0" border="0">
            <tr>
                <th class="tbl-header">Name</th>
                <td class="tbl-content">@Model.FirstOrDefault().User.Name</td>
            </tr>
            <tr>
                <th class="tbl-header">Username</th>
                <td class="tbl-content">@Model.FirstOrDefault().User.ScreenName</td>
            </tr>
            <tr>
                <th class="tbl-header">Description</th>
                <td class="tbl-content">@Model.FirstOrDefault().User.Description</td>
            </tr>
            <tr>
                <th class="tbl-header">Followers(*)</th>
                <td class="tbl-content">@Model.FirstOrDefault().User.FollowersCount</td>
            </tr>
            <tr>
                <th class="tbl-header">Following(*)</th>
                <td class="tbl-content">@Model.FirstOrDefault().User.FriendsCount</td>
            </tr>
            <tr>
                <th class="tbl-header">Total Tweets(*)</th>
                <td class="tbl-content">@Model.FirstOrDefault().User.StatusesCount</td>
            </tr>
            <tr>
                <th class="tbl-header">Total Favorites(*)</th>
                <td class="tbl-content">@Model.FirstOrDefault().User.FavouritesCount</td>
            </tr>
        </table>
    </section>
    <div class="content">
        <a href="#" class="tw-icon"></a>
        <div class="notification-box">

            @foreach (var item in Model)
            {
                if (!String.IsNullOrEmpty(item.IdStr))
                {
                    <div class="list">
                        <img src="@item.User.ProfileImageUrlHttps" class="avatar">
                        <div class="content">
                            @item.TextDecoded
                        </div>
                        <i class="time">@item.CreatedDate</i>
                        <i class="fa fa-retweet"> @item.RetweetCount</i>
                    </div>
                }
            }
        </div>
    </div>
</section>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

<style>
    h1 {
        font-size: 30px;
        color: #fff;
        text-transform: uppercase;
        font-weight: 300;
        text-align: center;
        margin-bottom: 15px;
    }

    .content {
        margin: 0 auto;
    }

    .tw-icon {
        margin: 0 auto;
    }

    /* ----------------------------------
    Twitter popup notification
    ------------------------------------ */
    .notification-box {
        border: 1px solid #000;
        border-radius: 5px;
        background: -webkit-linear-gradient(#fff 0%, #ccc);
        position: relative;
        padding-bottom: 10px;
        height: 300px;
        overflow-x: hidden;
        overflow-y: auto;
        margin-top: 0px;
    }

    /* ----------------------------------
    twitter list tweet news
    ------------------------------------ */
    .list {
        border-bottom: 1px solid #999;
        padding: 10px;
        position: relative;
        min-height: 50px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .list .avatar {
            float: left;
            margin-right: 10px;
        }

    .avatar {
        width: 30px;
    }

    .list .content {
        font-size: 12px;
        margin-right: 20px;
    }

    .list .time {
        position: absolute;
        right: 0;
        top: 0;
        margin: 10px 10px 0 0;
        font-style: normal;
        font-size: 11px;
        color: #aaa;
    }

    .list .fa-retweet {
        position: absolute;
        right: 0;
        top: 0;
        margin: 30px 10px 0 0;
        font-style: normal;
        font-size: 11px;
        color: #aaa;
    }

    .list:last-child {
        box-shadow: none;
        border: 0;
    }

    table {
        width: 100%;
        table-layout: fixed;
    }

    .tbl-header {
        background-color: rgba(255,255,255,0.3);
        border: 1px solid rgba(255,255,255,0.3);
    }

    .tbl-content {
        height: 20px;
        overflow-x: auto;
        margin-top: 0px;
        border: 1px solid rgba(255,255,255,0.3);
    }

    th {
        padding: 15px 15px;
        text-align: left;
        font-weight: 500;
        font-size: 12px;
        font-weight: bold;
        text-transform: uppercase;
    }

    td {
        padding: 15px;
        text-align: left;
        vertical-align: middle;
        font-weight: 300;
        font-size: 12px;
        color: #fff;
        border-bottom: solid 1px rgba(255,255,255,0.1);
    }

    @@import url(https://fonts.googleapis.com/css?family=Roboto:400,500,300,700);

    body {
        background: -webkit-linear-gradient(left, #25c481, #25b7c4);
        background: linear-gradient(to right, #25c481, #25b7c4);
        font-family: 'Roboto', sans-serif;
    }

    section {
        margin: 50px 0px;
    }

    ::-webkit-scrollbar {
        width: 6px;
    }

    ::-webkit-scrollbar-track {
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    }

    ::-webkit-scrollbar-thumb {
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    }
</style>